//ヌル文字を含む文字列にのみ対応
void fflushKarayomi(char *pointer){

     if(pointer[strlen(pointer)-1] == '\n'){
	  while(getchar() != '\n');
     }
}

void mallocFree(char *pointer)
{
     free(pointer)
}
void mallocKakuho(char *pointer,int Membyte){

     pointer = (char *)mallc(Membyte * sizeof(char)

}

